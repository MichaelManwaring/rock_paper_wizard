<div id="battle_status" class="battles_show_battle">
  <table id="battle" class="battles_show_battle_status">
    <tr>
      <td><%= content_tag :span %></td>
      <% if @battle.status == 0 %>
      <td>Select Your Move</td>
      <% elsif @battle.winner == 1 %>
      <td><%= @wizard.name + " Wins!" %></td>
      <% elsif @battle.winner == 3 %>
      <td><%= @opponent.name + " Wins!" %></td>
      <% elsif @battle.winner == 2 %>
      <td> "It's a Draw!" </td>
      <% end %> 
    </tr>
  </table>
</div>

